{% extends 'layouts/base.twig' %}

{% block title %}Membros do Curso{% endblock %}

{% block content %}
  <h1>Membros do curso: {{ course.title }}</h1>

  <p><a href="/curso/{{ course.id }}/membros/create">Adicionar Membro</a></p>

  <table border="1" cellspacing="0" cellpadding="6">
    <thead>
      <tr>
        <th>ID</th>
        <th>Usuário</th>
        <th>Função</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {% for member in members %}
        <tr>
          <td>{{ member.id }}</td>
          <td>{{ member.user_name }}</td>
          <td>{{ member.role }}</td>
          <td>
            <form action="/curso/{{ course.id }}/membros/{{ member.id }}/delete" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Tem certeza que deseja remover este membro?');">Remover</button>
            </form>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4">Nenhum membro encontrado.</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
