{% extends 'layouts/base.twig' %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/material.css">
{% endblock %}

{% block content %}
<div class="material-form-container">
  <h2>Editar Material</h2>
  <form action="/curso/{{ courseId }}/materiais/{{ material.id }}/update" method="POST" enctype="multipart/form-data">
    <input type="text" name="titulo" value="{{ material.titulo }}" required>
    <textarea name="descricao">{{ material.descricao }}</textarea>
    <input type="file" name="media">
    <button type="submit" class="btn btn-primary">Atualizar</button>
  </form>
  <a href="/curso/{{ courseId }}/materiais" class="btn-back">‚Üê Voltar</a>
</div>
{% endblock %}
