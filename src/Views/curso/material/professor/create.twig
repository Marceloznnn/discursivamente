{% extends 'layouts/base.twig' %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/material.css">
{% endblock %}

{% block content %}
<div class="material-form-container">
  <h2>Novo Material</h2>
  <form action="/curso/{{ courseId }}/materiais/store" method="POST" enctype="multipart/form-data">
    <input type="text" name="title" placeholder="Título" required>
<textarea name="description" placeholder="Descrição"></textarea>
<input type="file" name="media" required>

    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
  <a href="/curso/{{ courseId }}/materiais" class="btn-back">← Voltar</a>
</div>
{% endblock %}
