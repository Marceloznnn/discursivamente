{% extends 'layouts/base.twig' %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/material.css">
{% endblock %}

{% block content %}
<div class="material-show-container">
  <h2>{{ material.titulo }}</h2>
  <p>{{ material.descricao }}</p>
  {% if material.tipo == 'video' %}
    <video controls>
      <source src="/uploads/{{ material.arquivo }}" type="video/mp4">
    </video>
  {% else %}
    <img src="/uploads/{{ material.arquivo }}" alt="{{ material.titulo }}">
  {% endif %}
  <a href="/curso/{{ courseId }}/materiais" class="btn-back">‚Üê Voltar</a>
</div>
{% endblock %}
