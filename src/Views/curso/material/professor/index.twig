{% extends 'layouts/base.twig' %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/material.css">
{% endblock %}

{% block content %}
<div class="materials-container">
  <h1>Materiais do Curso</h1>
  <a href="/curso/{{ courseId }}/materiais/create" class="btn btn-primary">Adicionar Material</a>
  <ul>
    {% for material in materiais %}
      <li>
        <a href="/curso/{{ courseId }}/materiais/{{ material.id }}">Ver Material</a>
        <a href="/curso/{{ courseId }}/materiais/{{ material.id }}/edit">Editar</a>
        <form action="/curso/{{ courseId }}/materiais/{{ material.id }}/delete" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Deseja excluir?')">Excluir</button>
        </form>
      </li>
    {% endfor %}
  </ul>
  <a href="/curso/{{ courseId }}" class="btn-back">‚Üê Voltar ao Curso</a>
</div>
{% endblock %}
