{% extends 'layouts/base.twig' %}

{% block title %}{{ entry.getTitle() ?: 'Material' }} – {{ module.getTitle() }}{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/aluno/material.css">
{% endblock %}

{% block content %}
  <div id="material-container">

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol>
    <li><a href="/courses">Cursos</a></li>
    <li><a href="/courses/{{ course.getId() }}">{{ course.getTitle() }}</a></li>
    <li><a href="/courses/{{ course.getId() }}/modules">Módulos</a></li>
    <li class="current">{{ entry.getTitle() ?: 'Material' }}</li>
  </ol>
</nav>

    <h1 id="material-title">{{ entry.getTitle() ?: 'Material #' ~ entry.getId() }}</h1>
    <h2 id="material-subtitle">Módulo: {{ module.getTitle() }}</h2>

    <div id="material-content">
      {% set url = entry.getContentUrl() %}

      {% if entry.getContentType() == 'image' %}
        <img src="{{ url }}" alt="{{ entry.getTitle() }}" id="material-image" />

      {% elseif entry.getContentType() == 'video' %}
        <video controls src="{{ url }}" id="material-video"></video>

      {% else %}
        <a href="{{ url }}" download id="material-download">
          Baixar Arquivo
        </a>
      {% endif %}
    </div>

    {% if nextEntry %}
      <a href="/courses/{{ course.getId() }}/modules/{{ module.getId() }}/material/{{ nextEntry.getId() }}" id="material-next">Próximo &rarr;</a>
    {% endif %}

    <a href="/courses/{{ course.getId() }}/modules/{{ module.getId() }}" id="material-back">&larr; Voltar para Módulos</a>
  </div>
{% endblock %}

{% block scripts %}
  <script src="/assets/js/pages/curso/aluno/material.js"></script>
{% endblock %}
