{% extends 'layouts/base.twig' %}

{% block title %}Meus Cursos{% endblock %}

{% block content %}
<h1>Meus Cursos</h1>

{% if courses is empty %}
    <p>Você não está participando de nenhum curso no momento.</p>
{% else %}
    <div class="courses-container">
        {% for course in courses %}
            <div class="course-card">
                <img src="{{ course.image_url | default('/assets/images/sliders/cursosimg.jpeg') }}" alt="Imagem do curso" class="course-image">
                <div class="course-details">
                    <h2>{{ course.name }}</h2>
                    <p><strong>Categoria:</strong> {{ course.category }}</p>
                    <p><strong>Descrição:</strong> {{ course.description }}</p>
                    <p><strong>Participantes:</strong> {{ course.participant_count }}</p>
                    <a href="/courses/{{ course.id }}" class="btn btn-primary">Acessar Curso</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

<style>/* Reset básico */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background-color: #f8fafc;
  color: #1e293b;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Título da página */
h1 {
  text-align: center;
  margin: 40px 0 30px;
  font-size: 2.5rem;
  color: #1e293b;
}

/* Container dos cursos */
.courses-container {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
  padding: 0 20px 40px;
}

/* Card do curso */
.course-card {
  background-color: #fff;
  border-radius: 16px;
  overflow: hidden;
  width: 320px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.course-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 24px rgba(0,0,0,0.1);
}

/* Imagem do curso */
.course-image {
  width: 100%;
  height: 180px;
  object-fit: cover;
}

/* Conteúdo do card */
.course-details {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.course-details h2 {
  font-size: 1.4rem;
  color: #1e293b;
  margin-bottom: 8px;
}

.course-details p {
  color: #475569;
  font-size: 0.95rem;
  line-height: 1.4;
}

/* Botão */
.course-details .btn-primary {
  margin-top: auto;
  background-color:rgb(83, 16, 16);
  color: white;
  padding: 10px 16px;
  border-radius: 8px;
  text-align: center;
  text-decoration: none;
  font-weight: 600;
  transition: background-color 0.3s ease;
}

.course-details .btn-primary:hover {
  background-color: #3730a3;
}

/* Mensagem se não tiver cursos */
p {
  text-align: center;
  font-size: 1.1rem;
  color: #64748b;
}

/* Responsivo */
@media (max-width: 480px) {
  .course-card {
    width: 100%;
  }
}

</style>
{% endblock %}
