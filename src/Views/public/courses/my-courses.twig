{% extends 'layouts/base.twig' %}

{% block title %}Meus Cursos{% endblock %}

{% block content %}
<h1>Meus Cursos</h1>

{% if courses is empty %}
    <p>Você não está participando de nenhum curso no momento.</p>
{% else %}
    <div class="courses-container">
        {% for course in courses %}
            {# Debug: descomente para ver todos os campos em runtime #}
            {# {{ dump(course) }} #}

            <div class="course-card">
                <img 
                    src="{{ course.image_url | default('/assets/images/sliders/cursosimg.jpeg') }}" 
                    alt="Imagem ilustrativa do curso {{ course.name ?? course.title }}" 
                    class="course-image"
                >
                <div class="course-details">
                    <h2>
                        {{ course.name 
                           ?? course.title 
                           ?? (course.getName() is defined ? course.getName() : '— Sem título —') 
                        }}
                    </h2>
                    <a href="/courses/{{ course.id }}" class="btn btn-primary">
                        <i class="fas fa-play-circle"></i> Acessar Curso
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

<style>
/* Reset e fonte base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  background-color: #f8fafc;
  color: #1e293b;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Título */
h1 {
  text-align: center;
  margin: 40px 0 30px;
  font-size: 2.5rem;
}

/* Container flexível */
.courses-container {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
  padding-bottom: 40px;
}

/* Card do curso */
.course-card {
  background-color: #fff;
  border-radius: 16px;
  overflow: hidden;
  width: 320px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.course-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 24px rgba(0,0,0,0.1);
}

/* Imagem */
.course-image {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-bottom: 1px solid #e2e8f0;
}

/* Detalhes */
.course-details {
  padding: 20px;
  text-align: center;
}
.course-details h2 {
  font-size: 1.4rem;
  font-weight: 600;
  margin-bottom: 12px;
  color: #1e293b;
  transition: color 0.2s;
}
.course-details h2:hover {
  color: #7f1d1d;
}

/* Botão */
.btn-primary {
  display: inline-block;
  background-color: rgb(83, 16, 16);
  color: white;
  padding: 10px 16px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: bold;
  transition: background-color 0.3s;
}
.btn-primary i {
  margin-right: 8px;
}
.btn-primary:hover {
  background-color: #991b1b;
}

/* Texto se não houver cursos */
p {
  text-align: center;
  font-size: 1.1rem;
  color: #64748b;
}

/* Responsivo para tablets */
@media (max-width: 768px) {
  .course-card {
    width: 90%;
  }
}

/* Responsivo para celulares */
@media (max-width: 480px) {
  .course-card {
    width: 100%;
  }
}
</style>
{% endblock %}
