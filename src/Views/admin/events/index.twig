{% extends 'layouts/admin.twig' %}

{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin/events.css">
{% endblock %}

{% block scripts %}
    {# <script src="/assets/js/admin/events.js"></script> #}
{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Eventos</h1>
        <a href="/admin/events/create" class="btn btn-primary">Novo Evento</a>
    </div>

    {# Resumo rápido #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-info mb-2">
                <div class="card-body">
                    <h5 class="card-title">Total de Eventos</h5>
                    <p class="card-text display-4">{{ events|length }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-2">
                <div class="card-body">
                    <h5 class="card-title">Próximos Eventos</h5>
                    <p class="card-text display-4">{{ events|filter(e => e.getDateTimeObject() >= "now"|date_modify("0 seconds"))|length }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-secondary mb-2">
                <div class="card-body">
                    <h5 class="card-title">Eventos Passados</h5>
                    <p class="card-text display-4">{{ events|length - (events|filter(e => e.getDateTimeObject() >= "now"|date_modify("0 seconds"))|length) }}</p>
                </div>
            </div>
        </div>
    </div>

    {# Lista de Eventos em tabela #}
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Data</th>
                    <th>Visibilidade</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.getDateTimeObject()|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if event.visibility == 'public' %}
                                <span class="badge bg-success">Público</span>
                            {% elseif event.visibility == 'members' %}
                                <span class="badge bg-warning">Membros</span>
                            {% else %}
                                <span class="badge bg-secondary">Privado</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="/admin/events/{{ event.id }}/edit" class="btn btn-sm btn-outline-primary">Editar</a>
                            <form action="/admin/events/{{ event.id }}/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Deseja excluir este evento?');">Excluir</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Nenhum evento encontrado.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
