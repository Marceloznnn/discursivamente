{# templates/admin/events/index.twig #}
{% extends 'layouts/main.twig' %}
{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin/global_list.css">
{% endblock %}

{% block content %}
<div class="admin-list-container">
    <div class="admin-list-header">
        <h1 class="admin-list-title">Eventos</h1>
        <a href="/admin/events/create" class="btn btn-primary">Novo Evento</a>
    </div> 
    <div class="admin-list-summary">
        <div class="admin-list-summary-card">
            <div class="admin-list-summary-title">Total de Eventos</div>
            <div class="admin-list-summary-value">{{ events|length }}</div>
        </div>
    </div>
    <div class="admin-list-table-wrapper">
        <table class="admin-list-table">
            <thead>
                <tr>
                    <th>Destaque</th>
                    <th>Título</th>
                    <th>Data</th>
                    <th>Visibilidade</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr class="{{ event.isFeatured ? 'table-warning' }}">
                        <td>
                            {% if event.isFeatured %}
                                <span class="badge badge-warning">Sim ({{ event.featurePriority }})</span>
                            {% else %}
                                <span class="badge badge-secondary">Não</span>
                            {% endif %}
                        </td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.dateTime|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if event.visibility=='public' %}<span class="badge badge-success">Público</span>
                            {% elseif event.visibility=='members' %}<span class="badge badge-warning">Membros</span>
                            {% else %}<span class="badge badge-secondary">Privado</span>{% endif %}
                        </td>
                        <td>
                            <a href="/admin/events/{{ event.id }}/edit" class="btn btn-sm btn-outline-primary">Editar</a>
                            <form action="/admin/events/{{ event.id }}/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Excluir evento?');">Excluir</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="5" class="text-center">Nenhum evento encontrado.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}