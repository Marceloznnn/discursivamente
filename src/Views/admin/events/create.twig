{% extends 'layouts/main.twig' %}
{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin/events.css">
{% endblock %}

{% block scripts %}
    {# <script src="/assets/js/admin/events.js"></script> #}
{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Criar Novo Evento</h1>
            <a href="/admin/events" class="btn btn-secondary">Voltar</a>
        </div>
        <div class="card-body">
            {% if error is defined %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            
            <form method="post" action="/admin/events/store" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Título do Evento *</label>
                    <input type="text" class="form-control" id="title" name="title" required 
                           value="{{ event.title|default('') }}">
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Descrição *</label>
                    <textarea class="form-control" id="description" name="description" 
                              rows="4" required>{{ event.description|default('') }}</textarea>
                    <small class="text-muted">Descreva o evento com detalhes. Você pode usar formatação Markdown.</small>
                </div>
                
                <div class="mb-3">
                    <label for="date_time" class="form-label">Data e Hora *</label>
                    <input type="datetime-local" class="form-control" id="date_time" name="date_time" required
                           value="{{ event.dateTime|default('') }}">
                </div>
                
                <div class="mb-3">
                    <label for="visibility" class="form-label">Visibilidade</label>
                    <select class="form-select" id="visibility" name="visibility">
                        <option value="public" {% if event.visibility|default('public') == 'public' %}selected{% endif %}>Público</option>
                        <option value="members" {% if event.visibility|default('') == 'members' %}selected{% endif %}>Apenas Membros</option>
                        <option value="private" {% if event.visibility|default('') == 'private' %}selected{% endif %}>Privado</option>
                    </select>
                    <small class="text-muted">
                        <ul>
                            <li>Público: Visível para todos os visitantes</li>
                            <li>Apenas Membros: Visível apenas para usuários cadastrados</li>
                            <li>Privado: Visível apenas para administradores</li>
                        </ul>
                    </small>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Imagem do Evento</label>
                    <input type="file" class="form-control" id="image" name="image" accept="image/*">
                    <small class="text-muted">Recomendado: imagem de 1200x600px. Formatos aceitos: JPG, PNG, GIF.</small>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Criar Evento</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
