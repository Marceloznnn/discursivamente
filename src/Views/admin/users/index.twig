{% extends 'layouts/main.twig' %}
{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin/global_list.css">
{% endblock %}
{% block title %}Usuários{% endblock %}
 
{% block content %}
<div class="admin-list-container">
  <div class="admin-list-header">
    <h1 class="admin-list-title">Usuários</h1>
    <a href="/admin/users/create" class="btn btn-primary">Novo Usuário</a>
  </div>
  <div class="admin-list-table-wrapper">
    <table class="admin-list-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th> 
          <th>Email</th>
          <th>Tipo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
          <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.type|default('—') }}</td>
            <td>
              <a href="/admin/users/{{ user.id }}" class="btn btn-sm btn-outline-info">Ver</a>
              <a href="/admin/users/{{ user.id }}/edit" class="btn btn-sm btn-outline-primary">Editar</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5" class="text-center">Nenhum usuário encontrado.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
