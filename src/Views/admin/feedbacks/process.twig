{% extends 'layouts/admin.twig' %}

{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin/feedbacks.css">
{% endblock %}

{% block scripts %}
    {# <script src="/assets/js/admin/feedbacks.js"></script> #}
{% endblock %}


{% block title %}Processar Feedback #{{ feedback.id }}{% endblock %}
{% block content %}
<div class="container py-4">
  <h1 class="h3 mb-4">Processar Feedback #{{ feedback.id }}</h1>
  <p><strong>Usuário:</strong> {{ feedback.userId }}</p>
  <p><strong>Mensagem:</strong><br>{{ feedback.message }}</p>
  <p><strong>Avaliação:</strong> {{ feedback.rating is not null ? feedback.rating : '—' }}</p>
  <form action="/admin/feedbacks/{{ feedback.id }}/process" method="POST">
    <div class="mb-3">
      <label class="form-label">Novo status</label>
      <select name="status" class="form-select">
        <option value="resolved">Resolved</option>
        <option value="rejected">Rejected</option>
      </select>
    </div>
    <button class="btn btn-primary">Salvar</button>
    <a href="/admin/feedbacks/pending" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
{% endblock %}
