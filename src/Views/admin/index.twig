{% extends 'layouts/admin.twig' %}

{% block title %}Discursivamente - Administração{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin/index.css">
{% endblock %}

{% block scripts %}
    {# <script src="/assets/js/admin/index.js"></script> #}
{% endblock %}

{% block content %}
    <div class="admin-container">
        <div class="admin-header">
            <h1>Painel de Administração</h1>
            <div>
                <span>Bem-vindo, {{ session.user.name }}</span>
            </div>
        </div>
        
        <div class="admin-stats">
            <div class="stat-card">
                <h3>Usuários</h3>
                <div class="count">{{ userCount }}</div>
            </div>
            
            <div class="stat-card">
                <h3>Conversas</h3>
                <div class="count">{{ conversationCount }}</div>
            </div>
            
            <div class="stat-card">
                <h3>Feedbacks Pendentes</h3>
                <div class="count">{{ pendingFeedbacks }}</div>
            </div>
            
            <div class="stat-card">
                <h3>Eventos Cadastrados</h3>
                <div class="count">{{ upcomingEvents }}</div>
            </div>
        </div>

        <div class="admin-sections">
            <div class="section-card">
                <h3>Usuários</h3>
                <p>Gerenciar usuários do sistema</p>
                <a href="/admin/users" class="btn">Gerenciar Usuários</a>
            </div>
            
            <div class="section-card">
                <h3>Conversas</h3>
                <p>Gerenciar todas as conversas do sistema</p>
                <a href="/admin/conversations" class="btn">Gerenciar Conversas</a>
            </div>
            
            <div class="section-card">
                <h3>Feedbacks</h3>
                <p>Gerenciar feedbacks recebidos</p>
                <a href="/admin/feedbacks" class="btn">Gerenciar Feedbacks</a>
            </div>
            
            <div class="section-card">
                <h3>Feedbacks Pendentes</h3>
                <p>Visualizar feedbacks pendentes de análise</p>
                <a href="/admin/feedbacks/pending" class="btn">Ver Pendentes</a>
            </div>
            
            <div class="section-card">
                <h3>Eventos</h3>
                <p>Gerenciar eventos do sistema</p>
                <a href="/admin/events" class="btn">Gerenciar Eventos</a>
            </div>
            
        <div class="navigation-menu">
            <h2>Navegação</h2>
            <div class="buttons">
                <a href="/" class="btn">Home</a>
                <a href="/conversations" class="btn">Conversas</a>
                <a href="/logout" class="btn">Sair</a>
            </div>
        </div>
    </div>
{% endblock %}
