{% extends 'layouts/main.twig' %}

{% block styles %}
  {{ parent() }}
  <link rel="stylesheet" href="/assets/css/admin/index.css">
{% endblock %}

{% block content %}
  <div class="admin-dashboard-container">
    <header class="admin-dashboard-header">
      <h1>Painel de Administração</h1>
      <div class="welcome-message">
        Bem-vindo, {{ session.user.name }}
      </div>
    </header>

    <section class="admin-stats">
      <div class="stat-card">
        <h3>Usuários</h3>
        <div class="count">{{ userCount }}</div>
      </div>
      <div class="stat-card">
        <h3>Conversas</h3>
        <div class="count">{{ conversationCount }}</div>
      </div>
      <div class="stat-card">
        <h3>Eventos Cadastrados</h3>
        <div class="count">{{ upcomingEvents }}</div>
      </div>
    </section>

    <section class="admin-sections">
      <div class="section-card">
        <h3>Usuários</h3>
        <p>Gerenciar usuários do sistema</p>
        <a href="/admin/users" class="btn">Gerenciar Usuários</a>
      </div>
      <div class="section-card">
        <h3>Conversas</h3>
        <p>Gerenciar todas as conversas</p>
        <a href="/admin/conversations" class="btn">Gerenciar Conversas</a>
      </div>
      <div class="section-card">
        <h3>Eventos</h3>
        <p>Gerenciar eventos do sistema</p>
        <a href="/admin/events" class="btn">Gerenciar Eventos</a>
      </div>
    </section>

    <nav class="navigation-menu">
      <h2>Navegação</h2>
      <div class="buttons">
        <a href="/" class="btn">Home</a>
        <a href="/conversations" class="btn">Conversas</a>
        <a href="/logout" class="btn">Sair</a>
      </div>
    </nav>
  </div>
{% endblock %}
