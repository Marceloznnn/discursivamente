{# templates/teacher/materials/index.twig #}
{% extends 'layouts/base.twig' %}

{% block title %}Materiais do Curso – {{ course.title }}{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/teacher/materials_index.css">
{% endblock %}

{% block content %}
  <section class="materials-index">
    <header class="materials-header">
      <h1><i class="fas fa-folder-open"></i> Materiais: {{ course.title }}</h1>
      <div class="header-actions">
        <a href="/teacher/courses" class="btn btn-back">
          <i class="fas fa-arrow-left"></i> Voltar aos Cursos
        </a>
        <a href="/teacher/courses/{{ course.id }}/materials/create" class="btn btn-add">
          <i class="fas fa-plus-circle"></i> Adicionar Material
        </a>
      </div>
    </header>

    <div class="materials-list">
      {% if materials is empty %}
        <div class="no-materials">Não há materiais cadastrados.</div>
      {% else %}
        {% for mat in materials %}
          <div class="material-card">
            <div class="card-content">
              <h2 class="material-title"><i class="fas fa-file"></i> {{ mat.title }}</h2>
              <span class="material-type">{{ mat.contentType|split('/')|first|capitalize }}</span>
            </div>
            <div class="card-actions">
              <a href="/teacher/courses/{{ course.id }}/materials/{{ mat.id }}" class="btn btn-view-details">
                <i class="fas fa-eye"></i> Ver Detalhes
              </a>
              <form action="/teacher/courses/{{ course.id }}/materials/{{ mat.id }}/delete" method="post" onsubmit="return confirm('Remover este material?');" class="inline-form">
                <input type="hidden" name="_csrf_token" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-delete">
                  <i class="fas fa-trash-alt"></i> Excluir
                </button>
              </form>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </section>
{% endblock %}