{% extends 'layouts/base.twig' %}

{% block title %}Adicionar Material ao Módulo{% endblock %}

{% block content %}
<section class="material-form">
  <h1>Adicionar Material ao Módulo</h1>

  <form action="/teacher/courses/{{ course.id }}/modules/{{ moduleId }}/materials/add" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_csrf_token" value="{{ csrfToken }}">

    <div class="form-group">
      <label for="title">Título do Material</label>
      <input type="text" id="title" name="title" required>
    </div>

    <div class="form-group">
      <label for="file">Arquivo (ou deixe em branco para usar um link)</label>
      <input type="file" id="file" name="file">
    </div>

    <div class="form-group">
      <label for="content">Ou link externo</label>
      <input type="url" id="content" name="content" placeholder="https://exemplo.com/material">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar Material</button>
    <a href="/teacher/courses/{{ course.id }}/materials" class="btn btn-secondary">Cancelar</a>
  </form>
</section>
{% endblock %}
