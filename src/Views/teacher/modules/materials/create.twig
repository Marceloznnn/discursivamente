{# templates/teacher/courses/modules/materials/create.twig #}
{% extends 'layouts/base.twig' %}

{% block title %}Enviar Material – {{ module.title }}{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/global/edit.css">
{% endblock %}

{% block content %}
  <section class="form-page">
    <div class="form-container">
      <header class="form-header">
        <h1><i class="fas fa-upload"></i> Novo Material para {{ module.title }}</h1>
      </header>

      {# Flash messages #}
      {% if app.session.flash.error is defined and app.session.flash.error %}
        <div class="alert alert-error">
          <ul>
            {% for msg in app.session.flash.error %}
              <li>{{ msg }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
      {% if app.session.flash.success is defined and app.session.flash.success %}
        <div class="alert alert-success">
          <ul>
            {% for msg in app.session.flash.success %}
              <li>{{ msg }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      <form action="/teacher/courses/{{ course.id }}/modules/{{ module.id }}/materials" method="POST" enctype="multipart/form-data" class="form-content">
        <div class="form-group">
          <label for="title">Título</label>
          <input
            type="text"
            name="title"
            id="title"
            placeholder="Opcional"
          >
        </div>

        <div class="form-group">
          <label for="file">Arquivo <span class="required">*</span></label>
          <input
            type="file"
            name="file"
            id="file"
            accept="*/*"
            required
          >
        </div>

        <div class="form-footer">
          <a href="/teacher/courses/{{ course.id }}/modules/{{ module.id }}/materials" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
          </a>
          <button type="submit" class="btn-primary">
            <i class="fas fa-upload"></i> Enviar
          </button>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
