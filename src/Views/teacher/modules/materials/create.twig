{# File: templates/teacher/modules/materials/create.twig #}
{% extends 'layouts/base.twig' %}
{# ou, se você usar a pasta layouts: {% extends 'layouts/base.twig' %} #}

{% block title %}Enviar Material – {{ module.title }}{% endblock %}

{% block content %}
<div class="container mx-auto p-6 max-w-lg">
  <h1 class="text-2xl font-semibold mb-4">Novo Material para {{ module.title }}</h1>
  <form action="/teacher/courses/{{ course.id }}/modules/{{ module.id }}/materials" method="POST" enctype="multipart/form-data" class="space-y-4">
    <div>
      <label for="title" class="block text-sm font-medium">Título</label>
      <input type="text" name="title" id="title" class="mt-1 block w-full border rounded p-2" placeholder="Opcional">
    </div>
    <div>
      <label for="file" class="block text-sm font-medium">Arquivo</label>
      <input type="file" name="file" id="file" accept="*/*" class="mt-1 block w-full">
    </div>
    <div class="flex justify-end">
      <a href="/teacher/courses/{{ course.id }}/modules/{{ module.id }}/materials" class="mr-2 text-gray-600 hover:underline">Voltar</a>
      <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Enviar</button>
    </div>
  </form>
</div>
{% endblock %}
