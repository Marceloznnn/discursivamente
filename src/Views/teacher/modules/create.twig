{# templates/teacher/courses/modules/create.twig #}
{% extends 'layouts/base.twig' %}

{% block title %}Criar Módulo – {{ course.title }}{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/global/edit.css">
{% endblock %}

{% block content %}
  <section class="form-page">
    <div class="form-container">
      <header class="form-header">
        <h1><i class="fas fa-plus-circle"></i> Adicionar Módulo: {{ course.title }}</h1>
      </header>

      <form action="/teacher/courses/{{ course.id }}/modules" method="POST" class="form-content">
        <div class="form-group">
          <label for="title">Título <span class="required">*</span></label>
          <input type="text" name="title" id="title" placeholder="Digite o título do módulo" required>
        </div>

        <div class="form-group">
          <label for="description">Descrição</label>
          <textarea name="description" id="description" rows="4" placeholder="Descreva o módulo (opcional)"></textarea>
        </div>

        <div class="form-footer">
          <a href="/teacher/courses/{{ course.id }}/modules" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
          </a>
          <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i> Salvar
          </button>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
