{% extends 'layouts/base.twig' %}

{% block title %}Criar Módulo - {{ course.title }}{% endblock %}

{% block content %}
<div class="container mx-auto p-6 max-w-lg">
  <h1 class="text-2xl font-semibold mb-4">Novo Módulo: {{ course.title }}</h1>
  <form action="/teacher/courses/{{ course.id }}/modules" method="POST" class="space-y-4">
    <div>
      <label for="title" class="block text-sm font-medium">Título <span class="text-red-500">*</span></label>
      <input type="text" name="title" id="title" class="mt-1 block w-full border rounded p-2" required>
    </div>
    <div>
      <label for="description" class="block text-sm font-medium">Descrição</label>
      <textarea name="description" id="description" rows="4" class="mt-1 block w-full border rounded p-2"></textarea>
    </div>
    <div>
      <label for="position" class="block text-sm font-medium">Posição</label>
      <input type="number" name="position" id="position" class="mt-1 block w-32 border rounded p-2" value="{{ modules|length + 1 }}">
    </div>
    <div class="flex justify-end">
      <a href="/teacher/courses/{{ course.id }}/modules" class="mr-2 text-gray-600 hover:underline">Voltar</a>
      <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">Salvar</button>
    </div>
  </form>
</div>
{% endblock %}
