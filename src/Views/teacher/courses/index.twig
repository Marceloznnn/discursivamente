{# templates/pages/curso/teacher/index.twig #}
{% extends 'layouts/base.twig' %}

{% block title %}Painel de Cursos{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/teacher/index.css">
{% endblock %}

{% block content %}
  <section class="course-dashboard">
    <div class="dashboard-topbar">
      <h1 class="page-title">Painel de Cursos</h1>
      <a href="/teacher/courses/create" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Criar Curso
      </a>
    </div>

    <div class="course-grid">
      {% if courses|length > 0 %}
        {% for course in courses %}
          <div class="course-card">
            <div class="card-header">
              <h2 class="course-name">{{ course.getTitle() }}</h2>
            </div>
            <div class="card-footer">
              <a href="/teacher/courses/{{ course.getId() }}" class="btn btn-view-details">
                Ver Detalhes
              </a>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="no-courses">
          <p>Você ainda não criou nenhum curso.</p>
        </div>
      {% endif %}
    </div>
  </section>
{% endblock %}
