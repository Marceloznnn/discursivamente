{% extends 'layouts/base.twig' %}

{% block title %}Comentários do Curso{% endblock %}

{% block content %}
  <h1>Comentários: {{ course.getTitle() }}</h1>
  <p>
    <a href="/teacher/courses/{{ course.getId() }}" class="btn btn-secondary btn-sm">
      ← Voltar aos detalhes
    </a>
  </p>

  {% if comments is not empty %}
    <ul class="comments-list">
      {% for comment in comments %}
        <li class="comment-item">
          <div class="comment-meta">
            Usuário: <strong>{{ comment.getUserId() }}</strong>
            em {{ comment.getCreatedAt()|date('d/m/Y H:i') }}
            • Nota: {{ comment.getRating() }}
          </div>
          <p class="comment-text">{{ comment.getComment() }}</p>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Não há comentários para este curso.</p>
  {% endif %}
{% endblock %}
