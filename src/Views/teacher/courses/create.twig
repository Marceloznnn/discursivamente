{% extends 'layouts/base.twig' %}

{% block title %}Criar Curso{% endblock %}

{% block content %}
<h1>Criar Curso</h1>

<form action="/teacher/courses" method="post">
    <label for="title">Título:</label><br>
    <input type="text" name="title" id="title" required><br><br>

    <label for="description">Descrição:</label><br>
    <textarea name="description" id="description" rows="4"></textarea><br><br>

    <label for="category_id">Categoria:</label><br>
    <select name="category_id" id="category_id">
        <option value="">-- Selecione uma categoria --</option>
        {% for category in categories %}
            <option value="{{ category.id }}">{{ category.name }}</option>
        {% endfor %}
    </select>
    <br><br>

    <button type="submit">Salvar</button>
    <a href="/teacher/courses">Cancelar</a>
</form>
{% endblock %}
