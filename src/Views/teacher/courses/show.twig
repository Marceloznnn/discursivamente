{# File: templates/teacher/courses/show.twig #}
{% extends 'layouts/base.twig' %}

{% block title %}{{ course.getTitle() }} – Detalhes do Curso{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="/assets/css/pages/curso/teacher/show.css">
{% endblock %}

{% block content %}
  <section class="course-detail">
    <header class="detail-header">
      <div class="header-content">
        <h1 class="detail-title">
          <i class="fas fa-graduation-cap"></i>
          {{ course.getTitle() }}
        </h1>
        <div class="detail-badges">
          <span class="badge badge-category">
            <i class="fas fa-tags"></i>
            {{ category ? category.getName() : 'Sem categoria' }}
          </span>
          <span class="badge badge-participants">
            <i class="fas fa-user-friends"></i>
            {{ participantCount }} participantes
          </span>
          <span class="badge badge-comments">
            <i class="fas fa-comments"></i>
            {{ commentCount }} comentários
          </span>
        </div>
      </div>
    </header>

    <article class="detail-body">
      <h2 class="section-title">Visão Geral</h2>
      <p class="course-description">{{ course.getDescription() }}</p>
    </article>

    <footer class="detail-actions">
      <div class="action-group primary-actions">
        <a href="/teacher/courses/{{ course.getId() }}/edit" class="btn btn-primary">
          <i class="fas fa-edit"></i> Editar Curso
        </a>
        <form method="POST"
              action="/teacher/courses/{{ course.getId() }}/delete"
              onsubmit="return confirm('Tem certeza que deseja remover este curso?');"
              class="inline-form">
          <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Remover Curso
          </button>
        </form>
      </div>
      <div class="action-group secondary-actions">
        <a href="/teacher/courses/{{ course.getId() }}/modules" class="btn btn-materials">
          <i class="fas fa-book"></i> Gerenciar Módulos
        </a>
        <a href="/teacher/courses/{{ course.getId() }}/comments" class="btn btn-comments">
          <i class="fas fa-comment-dots"></i> Ver Comentários
        </a>
      </div>
    </footer>
  </section>
{% endblock %}