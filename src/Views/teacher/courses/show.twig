{# templates/teacher/courses/show.twig #}
{% extends 'layouts/base.twig' %}

{% block content %}
  <div class="course-detail">
    <h1>{{ course.getTitle() }}</h1>

    {# Exibe a categoria, se existir #}
    {% if category %}
      <p><strong>Categoria:</strong> {{ category.getName() }}</p>
    {% else %}
      <p><strong>Categoria:</strong> <em>Sem categoria</em></p>
    {% endif %}

    <p>{{ course.getDescription() }}</p>

    <ul class="course-actions">
      <li><a href="/teacher/courses/{{ course.getId() }}/edit">Editar Curso</a></li>
      <li>
        <form method="POST"
              action="/teacher/courses/{{ course.getId() }}/delete"
              onsubmit="return confirm('Tem certeza que deseja excluir este curso?');">
          <button type="submit">Excluir Curso</button>
        </form>
      </li>
      <li><a href="/teacher/courses/{{ course.getId() }}/materials">Materiais</a></li>
