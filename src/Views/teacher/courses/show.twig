{% extends 'layouts/base.twig' %}

{% block content %}
  <div class="course-detail">
    <h1>{{ course.getTitle() }}</h1>
    <p>{{ course.getDescription() }}</p>

    <ul class="course-actions">
      <li><a href="/teacher/courses/{{ course.getId() }}/edit">Editar Curso</a></li>
      <li>
        <form method="POST" action="/teacher/courses/{{ course.getId() }}/delete" onsubmit="return confirm('Tem certeza que deseja excluir este curso?');">
          <button type="submit">Excluir Curso</button>
        </form>
      </li>
      <li><a href="/teacher/courses/{{ course.getId() }}/materials">Materiais</a></li>
      <li><a href="/teacher/courses/{{ course.getId() }}/comments">Coment√°rios ({{ commentCount }})</a></li>
    </ul>
  </div>
{% endblock %}