{% extends 'layouts/base.twig' %}

{% block title %}Editar Curso{% endblock %}

{% block content %}
<h1>Editar Curso</h1>

<form action="/teacher/courses/{{ course.id }}/update" method="post">
    <label for="title">Título:</label><br>
    <input type="text" name="title" id="title" value="{{ course.title }}" required><br><br>

    <label for="description">Descrição:</label><br>
    <textarea name="description" id="description" rows="4">{{ course.description }}</textarea><br><br>

    <button type="submit">Atualizar</button>
    <a href="/teacher/courses">Cancelar</a>
</form>
{% endblock %}
