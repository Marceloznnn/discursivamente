{% extends 'layouts/base.twig' %}
{% block styles %}
    <link rel="stylesheet" href="/assets/css/pages/auth/reset.css">
{% endblock %}
{% block title %}Discursivamente - Esqueci Senha{% endblock %}

{% block content %}
  <div class="max-w-sm mx-auto mt-24 bg-white rounded-xl shadow-md p-6">
    <h2 class="text-xl font-bold text-center text-wine-600 mb-4">Esqueci minha senha</h2>
    <p class="text-sm text-gray-600 text-center mb-6">Digite seu e‑mail para receber o código de recuperação.</p>

    {% if error %}
      <div class="bg-red-50 border border-red-400 text-red-600 p-3 rounded mb-4">
        {{ error }}
      </div>
    {% endif %}

    {% if success %}
      <div class="bg-green-50 border border-green-400 text-green-600 p-3 rounded mb-4">
        {{ success }}
      </div>
    {% endif %}

    <form action="/forgot-password" method="POST" class="space-y-4">
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E‑mail</label>
        <input type="email" id="email" name="email" required
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:border-wine-600 focus:outline-none"/>
      </div>
      <button type="submit"
              class="w-full py-3 font-bold rounded-md bg-wine-600 text-red hover:bg-wine-700 transition">
        Enviar código
      </button>
    </form>

    <div class="text-center mt-4">
      <a href="/login" class="text-wine-600 hover:underline">Voltar para login</a>
    </div>
  </div>
{% endblock %}
