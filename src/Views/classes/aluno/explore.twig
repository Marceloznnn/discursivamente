{# templates/classes/aluno/index.twig #}
{% extends "layouts/base.twig" %}

{% block title %}Explorar Turmas{% endblock %}

{% block content %}
<div class="container mx-auto py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Explorar Turmas</h1>
    <!-- FormulÃ¡rio de busca -->
    <form method="get" action="" class="flex">
      <input
        type="text"
        name="q"
        value="{{ app.request.get('q') }}"
        placeholder="Buscar por nome de turma..."
        class="px-3 py-2 border rounded-l focus:outline-none"
      >
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-r hover:bg-blue-700">
        <i class="fas fa-search"></i>
      </button>
    </form>
  </div>

  {% if classes is empty %}
    <p class="text-gray-600">Nenhuma turma encontrada.</p>
  {% else %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {% for turma in classes %}
        <div class="p-4 border rounded shadow hover:shadow-lg transition">
          <h2 class="text-xl font-semibold mb-2">{{ turma.nome }}</h2>
          <p class="text-gray-700 mb-2 truncate">{{ turma.descricao }}</p>
          <p class="text-sm text-gray-600">Professor: {{ turma.professor_nome }}</p>
          <p class="text-sm text-gray-600">Status: {{ turma.status }} | Privacidade: {{ turma.privacidade }}</p>
          <a href="/classes/aluno/{{ turma.id }}/view" class="mt-4 inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
            Ver Detalhes
          </a>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
{% endblock %}