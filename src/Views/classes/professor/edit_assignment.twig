{% extends "layouts/base.twig" %}

{% block title %}Editar Atividade{% endblock %}

{% block content %}
<h2>Editar Atividade</h2>

<form method="POST" action="/classes/professor/{{ classroomId }}/assignments/{{ assignment.id }}/update">
    <div>
        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo" value="{{ assignment.titulo }}" required>
    </div>

    <div>
        <label for="descricao">Descrição:</label>
        <textarea id="descricao" name="descricao" required>{{ assignment.descricao }}</textarea>
    </div>

    <div>
        <label for="tipo">Tipo:</label>
        <select id="tipo" name="tipo" required>
            <option value="dissertativa" {{ assignment.tipo == 'dissertativa' ? 'selected' : '' }}>Dissertativa</option>
            <option value="objetiva" {{ assignment.tipo == 'objetiva' ? 'selected' : '' }}>Objetiva</option>
        </select>
    </div>

    <div>
        <label for="peso">Peso:</label>
        <input type="number" step="0.1" min="0" id="peso" name="peso" value="{{ assignment.peso }}">
    </div>

    <div>
        <label for="dataInicio">Data de Início:</label>
        <input type="date" id="dataInicio" name="dataInicio" value="{{ assignment.dataInicio|date('Y-m-d') }}">
    </div>

    <div>
        <label for="dataFim">Data de Fim:</label>
        <input type="date" id="dataFim" name="dataFim" value="{{ assignment.dataFim|date('Y-m-d') }}">
    </div>

    <div>
        <button type="submit">Salvar Alterações</button>
        <a href="/classes/professor/{{ classroomId }}/assignments">Cancelar</a>
    </div>
</form>
{% endblock %}
