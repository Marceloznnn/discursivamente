
{% extends "layouts/base.twig" %}

{% block content %}
  <h1 class="text-2xl font-bold mb-4">Solicitações Pendentes por Turma</h1>

  {% if summary is empty %}
    <p>Não há solicitações pendentes em nenhuma turma.</p>
  {% else %}
    <div class="space-y-4">
      {% for row in summary %}
        <div class="p-4 border rounded shadow bg-white flex items-center justify-between">
          <div>
            <h2 class="text-lg font-semibold">{{ row.classroom_name }}</h2>
            <p class="text-sm text-gray-600">Pendentes: {{ row.pending_count }}</p>
          </div>
          <a href="/classes/professor/{{ row.classroom_id }}/requests"
             class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
            Ver detalhes
          </a>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  <div class="mt-6">
    <a href="/classes/professor"
       class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
      Voltar às Minhas Turmas
    </a>
  </div>
{% endblock %}
