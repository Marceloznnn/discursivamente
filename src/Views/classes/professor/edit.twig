<h1>Editar Turma: {{ classroom.nome }}</h1>

<form method="POST" action="/classes/professor/{{ classroom.id }}/update">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" value="{{ classroom.nome }}" required><br><br>

    <label for="descricao">Descrição:</label>
    <textarea id="descricao" name="descricao" required>{{ classroom.descricao }}</textarea><br><br>

    <label for="status">Status:</label>
    <select name="status" id="status" required>
        <option value="ativa" {% if classroom.status == 'ativa' %}selected{% endif %}>Ativa</option>
        <option value="inativa" {% if classroom.status == 'inativa' %}selected{% endif %}>Inativa</option>
    </select><br><br>

    <label for="privacidade">Privacidade:</label>
    <select name="privacidade" id="privacidade" required>
        <option value="aberta" {% if classroom.privacidade == 'aberta' %}selected{% endif %}>Aberta</option>
        <option value="fechada" {% if classroom.privacidade == 'fechada' %}selected{% endif %}>Fechada</option>
    </select><br><br>

    <button type="submit">Salvar alterações</button>
</form>
