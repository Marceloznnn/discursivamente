{% extends 'layouts/base.twig' %}

{% block title %}Minhas Turmas{% endblock %}

{% block content %}
<div class="container mx-auto py-8">
  <h1 class="text-2xl font-bold mb-4">Minhas Turmas</h1>
  <a href="/classes/professor/create" class="btn primary mb-6">+ Nova Turma</a>

  {% if classes is not empty %}
    <table class="w-full table-auto">
      <thead>
        <tr>
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2">Nome</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Privacidade</th>
          <th class="px-4 py-2">Ações</th>
        </tr>
      </thead>
      <tbody>
        {% for turma in classes %}
          <tr class="border-t">
            <td class="px-4 py-2">{{ turma.id }}</td>
            <td class="px-4 py-2">{{ turma.nome }}</td>
            <td class="px-4 py-2 capitalize">{{ turma.status }}</td>
            <td class="px-4 py-2 capitalize">{{ turma.privacidade }}</td>
            <td class="px-4 py-2 space-x-2">
              <a href="/classes/professor/{{ turma.id }}/edit" class="btn">Editar</a>
              <a href="/classes/professor/{{ turma.id }}/delete" class="btn danger"
                 onclick="return confirm('Confirma exclusão?');">
                Excluir
              </a>
              <a href="/classes/professor/{{ turma.id }}/assignments" class="btn info">Ver Atividades</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Você ainda não criou nenhuma turma.</p>
  {% endif %}
</div>
{% endblock %}
