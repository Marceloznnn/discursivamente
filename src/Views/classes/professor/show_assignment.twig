{% extends "layouts/base.twig" %}

{% block content %}
  <h1 class="text-2xl font-bold mb-4">Detalhes da Atividade</h1>

  <div class="bg-white p-6 rounded shadow">
    <h2 class="text-xl font-semibold mb-2">{{ assignment.titulo }}</h2>
    <p class="mb-4">{{ assignment.descricao }}</p>

    <table class="w-full mb-4 text-sm text-left text-gray-700">
      <tr>
        <th class="px-2 py-1">Tipo</th>
        <td class="px-2 py-1">{{ assignment.tipo }}</td>
      </tr>
      <tr>
        <th class="px-2 py-1">Início</th>
        <td class="px-2 py-1">
          {{ assignment.dataInicio is defined ? assignment.dataInicio|date('d/m/Y') : '—' }}
        </td>
      </tr>
      <tr>
        <th class="px-2 py-1">Fim</th>
        <td class="px-2 py-1">
          {{ assignment.dataFim is defined ? assignment.dataFim|date('d/m/Y') : '—' }}
        </td>
      </tr>
      <tr>
        <th class="px-2 py-1">Peso</th>
        <td class="px-2 py-1">{{ assignment.peso ?: '—' }}</td>
      </tr>
      <tr>
        <th class="px-2 py-1">Configurações</th>
        <td class="px-2 py-1 font-mono text-xs whitespace-pre-wrap">{{ assignment.configuracoes ?: '{}' }}</td>
      </tr>
    </table>

    <div class="flex space-x-2">
      <a href="/classes/professor/{{ classroomId }}/assignments" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
        Voltar às Atividades
      </a>
      <a href="/classes/professor/{{ classroomId }}/assignments/{{ assignment.id }}/edit" class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">
        Editar Atividade
      </a>
    </div>
  </div>
{% endblock %}
