{% extends 'layouts/base.twig' %}

{% block title %}Criar Nova Turma{% endblock %}

{% block styles %}
    {# CSS específico para criação de turma #}
    {# <link rel="stylesheet" href="/assets/css/classroom/create.css"> #}
{% endblock %}

{% block content %}
    <div class="create-classroom-container">
        <h1>Criar Nova Turma</h1>

        <form action="/classes/professor/store" method="POST" class="classroom-form">
            <div class="form-group">
                <label for="nome">Nome da Turma</label>
                <input type="text" id="nome" name="nome" required>
            </div>

            <div class="form-group">
                <label for="descricao">Descrição</label>
                <textarea id="descricao" name="descricao" rows="4"></textarea>
            </div>

            <div class="form-group">
                <label for="privacidade">Privacidade</label>
                <select id="privacidade" name="privacidade">
                    <option value="aberta">Aberta (qualquer aluno pode ingressar)</option>
                    <option value="fechada">Fechada (requer aprovação)</option>
                    <option value="privada">Privada (somente por convite)</option>
                </select>
            </div>

            <div class="form-group">
                <label for="capacity">Capacidade (número de alunos)</label>
                <input type="number" id="capacity" name="capacity" min="1" value="30">
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary">Criar Turma</button>
                <a href="/classes/professor" class="btn">Cancelar</a>
            </div>
        </form>

        <div class="navigation-menu">
            <h2>Navegação</h2>
            <div class="buttons">
                <a href="/" class="btn">Home</a>
                <a href="/dashboard/professor" class="btn">Dashboard</a>
                <a href="/classes/professor" class="btn">Voltar para Turmas</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {# JS específico para criação de turma #}
    {# <script src="/assets/js/classroom/create.js"></script> #}
{% endblock %}