 {% extends 'layouts/base.twig' %}
 {% block title %}Editar Perfil{% endblock %}
 
{% block content %}
<main class="flex-grow container mx-auto p-4">
  <div class="container mx-auto py-8">
  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Editar Perfil</h2>

      {% if error %}
        <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">{{ error }}</div>
      {% endif %}

      <form action="/profile/update" method="post" enctype="multipart/form-data" class="space-y-6">

        <!-- Campo: Nome -->
        <div>
          <label for="name" class="block text-gray-700 font-medium">Nome</label>
          <input type="text" id="name" name="name" value="{{ user.name }}"
                 class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring focus:ring-blue-200 focus:border-blue-400">
        </div>

        <!-- Campo: Biografia -->
        <div>
          <label for="bio" class="block text-gray-700 font-medium">Biografia</label>
          <textarea id="bio" name="bio" rows="4"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring focus:ring-blue-200 focus:border-blue-400"
          >{{ user.bio }}</textarea>
        </div>

        <!-- Avatar atual e opções -->
        <div>
          <label class="block text-gray-700 font-medium">Avatar Atual</label>
          <img src="{{ user.avatar ?: '/assets/default-avatar.png' }}"
               alt="Avatar Atual"
               class="w-20 h-20 rounded-full object-cover mt-2">
        </div>

        <!-- Upload/remover avatar -->
        <div class="flex items-center space-x-4">
          <div class="flex-1">
            <label class="block text-gray-700 font-medium" for="avatar">Alterar Avatar</label>
            <input type="file" id="avatar" name="avatar" accept="image/*"
                   class="mt-1 w-full text-gray-700">
          </div>
          <div class="flex-shrink-0 pt-6">
            <button type="submit"
                    name="remove_avatar"
                    value="1"
                    class="px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow">
              Remover Foto
            </button>
          </div>
        </div>

        <!-- Ações -->
        <div class="pt-4 text-right">
          <a href="/profile" class="inline-block px-4 py-2 mr-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg">Cancelar</a>
          <button type="submit" class="inline-block px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg">Salvar Alterações</button>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
