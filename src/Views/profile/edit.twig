{# templates/profile/edit.twig #}
{% extends 'layouts/base.twig' %}

{% block title %}Editar Perfil{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/assets/css/pages/profile/edit.css">
{% endblock %}

{% block content %}
<main id="profile-edit-page">
  <div id="profile-edit-card">
    <div id="profile-edit-header">
      <h2>Editar Perfil</h2>
    </div>

    {% if error %}
      <div id="error-message">{{ error }}</div>
    {% endif %}

    <form id="profile-edit-form" action="/profile/update" method="post" enctype="multipart/form-data">
      <!-- Campo: Nome -->
      <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" id="name" name="name" value="{{ user.name }}">
      </div>

      <!-- Campo: Biografia -->
      <div class="form-group">
        <label for="bio">Biografia</label>
        <textarea id="bio" name="bio" rows="4">{{ user.bio }}</textarea>
      </div>

      <!-- Avatar atual -->
      <div class="form-group">
        <label>Avatar Atual</label>
        <img
          id="current-avatar"
          src="{{ user.avatar ?: '/assets/default-avatar.png' }}"
          alt="Avatar Atual"
        >
      </div>

      <!-- Upload / Remover Avatar -->
      <div class="form-group" id="avatar-actions">
        <div class="upload-avatar">
          <label for="avatar">Alterar Avatar</label>
          <input type="file" id="avatar" name="avatar" accept="image/*">
        </div>
        <div class="remove-avatar">
          <button type="submit" name="remove_avatar" value="1">Remover Foto</button>
        </div>
      </div>

      <!-- Ações -->
      <div id="form-actions">
        <a href="/profile" class="btn-cancel">Cancelar</a>
        <button type="submit" class="btn-save">Salvar Alterações</button>
      </div>
    </form>
  </div>
</main>
{% endblock %}
