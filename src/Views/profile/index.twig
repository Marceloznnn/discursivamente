{# templates/profile/index.twig #}
{% extends 'layouts/base.twig' %}
{% block title %}Meu Perfil{% endblock %}

{% block content %}
<div class="container mx-auto py-8">
  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="flex items-center px-6 py-4 bg-gray-100">
      <img class="w-24 h-24 rounded-full object-cover border-2 border-gray-300" src="{{ user.avatar ?: '/assets/default-avatar.png' }}" alt="Avatar de {{ user.name }}">
      <div class="ml-4">
        <h2 class="text-2xl font-semibold text-gray-800">{{ user.name }}</h2>
        <p class="text-gray-600">{{ user.email }}</p>
      </div>
    </div>
    <div class="px-6 py-4">
      <h3 class="text-lg font-medium text-gray-700 mb-2">Biografia</h3>
      <p class="text-gray-600 whitespace-pre-wrap">{{ user.bio ?: 'Ainda n√£o adicionou uma biografia.' }}</p>
    </div>
    <div class="px-6 py-4 bg-gray-50 text-right">
      <a href="/profile/edit" class="inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow">Editar Perfil</a>
    </div>
  </div>
</div>
{% endblock %}

